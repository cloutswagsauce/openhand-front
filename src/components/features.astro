---
// @ts-ignore
import { Icon } from "astro-icon/components";

const { features } = Astro.props;

const defaultFeatures = [
  {
    title: "Collect",
    description:
      "We collect second-hand or new clothing from generous donors in our community.",
    icon: "bx:bxs-t-shirt",
  },
  {
    title: "Clean",
    description:
      "Every item is carefully inspected, cleaned, and prepared to ensure dignity for the recipients.",
    icon: "bx:bxs-washer",
  },
  {
    title: "Redistribute",
    description:
      "We distribute the clothing directly to people in need within our local area.",
    icon: "bx:bxs-heart",
  },
];

const items = features || defaultFeatures;
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Our Mission</h2>
  <p class="text-lg mt-4 text-slate-600">
    We are dedicated to giving clothes a second life and helping those in need
    through a simple, transparent process.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    items.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>

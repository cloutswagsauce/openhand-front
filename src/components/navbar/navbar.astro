---
import Container from "@/components/container.astro";
import Link from "@/components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    /* title: "Features",
    path: "#",
    children: [
     /* { title: "Action", path: "/" },
      { title: "Another action", path: "#" },
      { title: "Dropdown Submenu", path: "#" },
      { title: "404 Page", path: "/404" },
    ],*/
  },
  {
    title: "Home",
    path: "/",
  },
  {
    title: "News",
    path: "/news",
  },
];

const currentLang = Astro.currentLocale || "en";
const isFrench = currentLang === "fr";
const toggleLang = isFrench ? "en" : "fr";
const togglePath = isFrench ? "/" : "/fr";
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href={isFrench ? "/fr" : "/"} class="text-lg"
          ><span class="font-bold text-slate-800">Open</span><span
            class="text-slate-500">Hand</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          <li>
            <a
              href={isFrench ? "/fr" : "/"}
              class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
              <span>{isFrench ? "Accueil" : "Home"}</span>
            </a>
          </li>
          <li>
            <a
              href={isFrench ? "/fr/news" : "/news"}
              class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
              <span>{isFrench ? "Actualit√©s" : "News"}</span>
            </a>
          </li>
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href={isFrench ? "/fr/join" : "/join"} size="md" block
            >{isFrench ? "Rejoindre" : "Join Now"}</Link
          >
          <div class="flex justify-center mt-2">
            <a
              href={togglePath}
              class="flex items-center gap-1 text-gray-600 hover:text-black transition">
              <span class={!isFrench ? "font-bold text-black" : "text-gray-400"}
                >EN</span
              >
              <span class="text-gray-300">/</span>
              <span class={isFrench ? "font-bold text-black" : "text-gray-400"}
                >FR</span
              >
            </a>
          </div>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href={isFrench ? "/fr/join" : "/join"} size="md"
          >{isFrench ? "Rejoindre" : "Join Now"}</Link
        >
        <a
          href={togglePath}
          class="flex items-center gap-1 text-gray-600 hover:text-black transition">
          <span class={!isFrench ? "font-bold text-black" : "text-gray-400"}
            >EN</span
          >
          <span class="text-gray-300">/</span>
          <span class={isFrench ? "font-bold text-black" : "text-gray-400"}
            >FR</span
          >
        </a>
      </div>
    </div>
  </header>
</Container>
